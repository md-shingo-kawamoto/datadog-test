<h1>TODO編集</h1>

<%= form_with model: @todo, local: true do |f| %>
  <% if @todo.errors.any? %>
    <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 12px 20px; border-radius: 8px; margin-bottom: 20px;">
      <h3 style="font-size: 16px; margin-bottom: 8px;"><%= pluralize(@todo.errors.count, "個のエラー") %>があります:</h3>
      <ul style="margin-left: 20px;">
        <% @todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, '説明' %>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div style="display: flex; gap: 12px;">
    <%= f.submit '更新', class: 'btn btn-success' %>
    <%= link_to 'キャンセル', todos_path, class: 'btn btn-danger' %>
  </div>
<% end %>

